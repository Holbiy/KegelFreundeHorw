@model KegelFreundeHorw.Models.Domain.Member
@{
    ViewData["Title"] = "Mitglieder hinzufügen";
}
<link rel="stylesheet" href="~/css/form.css" />
<link rel="stylesheet" href="~/css/members.css">

@section Title
{
    <div class="container">
        <h1>Mitglieder hinzufügen</h1>
        <h2>Mitglieder zum Verein hinzufügen</h2>
    </div>
}


<form asp-controller="Members" asp-action="AddMembers" method="post" enctype="multipart/form-data">

        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name">
        <span asp-validation-for="Name"></span>

        <label asp-for="@Model.Prename"></label>
        <input asp-for="@Model.Prename">
        <span asp-validation-for="Prename"></span>

        <label asp-for="@Model.BirthDate"></label>
        <input value="2000-01-01" asp-for="@Model.BirthDate" type="date">
        <span asp-validation-for="BirthDate"></span>

        <label asp-for="@Model.Description"></label>
        <textarea asp-for="@Model.Description"></textarea>
        <span asp-validation-for="Description"></span>

        <label asp-for="@Model.filePhoto" multiple="multiple"></label>
        <input asp-for="@Model.filePhoto" type="file">
        <span asp-validation-for="filePhoto"></span>

        <button type="submit">Hinzufügen</button>
    </form>