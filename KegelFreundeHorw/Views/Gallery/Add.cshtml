@model KegelFreundeHorw.Models.Domain.PhotoGraphy
@{
    ViewData["Title"] = "Bild hinzufügen";
}
>
<link rel="stylesheet" href="~/css/form.css">

@section Title
{
    <div class="container">
        <h1>Bild hinzufügen</h1>
        <h2>Bilder zur Gallerie hinzufügen.</h2>
    </div>
}


<form asp-controller="Gallery" asp-action="AddPhotos" method="post" enctype="multipart/form-data">
    <label asp-for="@Model.filePhoto" multiple="multiple"></label>
    <input asp-for="@Model.filePhoto" type="file">
    <span asp-validation-for="@Model.filePhoto"></span>

    <button type="submit">Hochladen</button>
</form>